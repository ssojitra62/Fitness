<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity15"
    android:orientation="vertical"
    android:background="#1C1A1B">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/back3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:backgroundTint="#1C1A1B"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Completed"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulation"
                android:textColor="#8F8584"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/p1"
            android:layout_gravity="center"/>
        </FrameLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="100dp">



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:backgroundTint="#E52A61"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/start13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#E52A61"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:outlineAmbientShadowColor="#E52A61"
                android:outlineSpotShadowColor="#E52A61"
                android:shadowColor="#E52A61"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="DASHBOARD"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>